rule "RGB Start"
when
    Item CIR_GF_MainLock received update or
    Time cron "0 */5 * ? * MON-SUN"
then
  logInfo ("lock", "State: {}", CIR_GF_MainLock.state.toString())
  if (CIR_GF_MainLock.state.toString() == "OPEN") {
    HH_FrontDoorSwitch.postUpdate(OFF)
  } else {
    HH_FrontDoorSwitch.postUpdate(ON)
  }
  logInfo ("lock", "Lock indicator: {}", HH_FrontDoorSwitch.state.toString())
end
