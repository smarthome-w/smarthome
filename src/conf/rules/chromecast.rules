rule "daily_info"
when
  Item calendar_DailyInfo changed to ON or Item DebugButton received update or Item GH_DailyInfo received update
then
  var externalTemp = (GF_FamilyRoom_Outdoor_Temperature_Sensor.state as Number).floatValue
  logError("Chromecast", "number {}", externalTemp)
  var ttsMessage = String.format("Good morning, there is %.1f Celcius outside.", externalTemp)
  var lang = "en-gb"

  ttsLanguage.sendCommand(lang)
  ttsText.sendCommand(ttsMessage)
  calendar_DailyInfo.postUpdate(OFF)
end
