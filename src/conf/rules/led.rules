rule "family_room_led_power"
when
    Item WiFiLEDFamilyRoom_power received update
then
    WiFiLED5_power.sendCommand(triggeringItem.state)
    WiFiLED6_power.sendCommand(triggeringItem.state)
    WiFiLED7_power.sendCommand(triggeringItem.state)
end

