rule "System started"
when
    System started
then
  OpenHAB_Restart.postUpdate(now.toString())

  val String currentTime = String::format( "%1$tY-%1$tm-%1$td %1$tk:%1$tM:%1$tS", new java.util.Date )
  var command = "/openhab/conf/scripts/SLACK/slack.sh ':interrobang:' `" + currentTime + "` OpenHAB restarted"
  var result = executeCommandLine (command, 10000)
  if (result == "") {
  }
  //logInfo("slack", "command: {} with result:\n>>\n{}\n<<\n", command, result)
end

rule "mode_rule"
when
  Time cron "0 */1 * ? * MON-SUN"
then
    logError("temp", "Temperature modes - start")
    GF_FamilyRoom_Outdoor_Temperature_Mode.sendCommand("on")
    FF_AnnRoom_Indoor_Temperature_Mode.sendCommand("on")
    FF_Bedroom_Indoor_Temperature_Mode.sendCommand("on")
    FF_AliceRoom_Indoor_Temperature_Mode.sendCommand("on")
    GF_FamilyRoom_Indoor_Temperature_Mode.sendCommand("on")
    GF_PowerMeter_Temperature_Mode.sendCommand("on")
    logError("temp", "Temperature modes were set")
end
