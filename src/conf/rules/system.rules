rule "System started"
when
    System started
then
  OpenHAB_Restart.postUpdate(new DateTimeType())

  if (GF_Presence_Mode.state === NULL) {
    GF_Presence_Mode.sendCommand("PRESENT")
  }

  val String currentTime = String::format( "%1$tY-%1$tm-%1$td %1$tk:%1$tM:%1$tS", new java.util.Date )
  var command = "/openhab/conf/scripts/SLACK/slack.sh ':information_source:' `" + currentTime + "` OpenHAB restarted"
  var result = executeCommandLine (Duration.ofSeconds(10), command)
  if (result == "") {
  }
end
